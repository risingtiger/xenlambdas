{
    "$schema": "https://json.schemastore.org/tsconfig",

    "display": "Node 16",

    "compilerOptions": 
    {
	"lib": ["ES2021"],
	"module": "ES2022",
	"target": "ES2021",

	"strict": true,
	"esModuleInterop": true,
	"skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	"moduleResolution": "node",

	"outDir": "build",
	"sourceMap": true
    }, 
    "include": [   "src/"   ]
}
